<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Travel Agency Admin Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #667eea, #764ba2);
      min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
      width: 280px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      background: linear-gradient(180deg, #0f2027, #203a43, #2c5364);
      color: #fff;
      padding-top: 20px;
      transition: 0.3s;
    }

    .sidebar-header {
      text-align: center;
      font-size: 1.7rem;
      font-weight: 700;
      padding: 20px;
      background: linear-gradient(135deg, #ff9966, #ff5e62);
      border-radius: 0 0 20px 20px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      margin: 8px 15px;
      color: #cfd8dc;
      text-decoration: none;
      border-radius: 12px;
      transition: 0.3s;
    }

    .sidebar a i {
      font-size: 1.2rem;
      margin-right: 12px;
    }

    .sidebar a:hover,
    .sidebar a.active {
      background: linear-gradient(135deg, #ff9966, #ff5e62);
      color: #fff;
      transform: translateX(6px);
    }

    /* Content */
    .content {
      margin-left: 280px;
      padding: 30px;
      min-height: 100vh;
      background: #f8f9fa;
      border-radius: 25px 0 0 25px;
    }

    /* Cards */
    .stat-card {
      background: #fff;
      border-radius: 18px;
      padding: 25px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.08);
      transition: 0.3s;
    }

    .stat-card:hover {
      transform: translateY(-6px);
    }

    .stat-icon {
      font-size: 2.2rem;
      padding: 15px;
      border-radius: 50%;
      color: #fff;
      margin-bottom: 10px;
      display: inline-block;
    }

    .bg-packages { background: #ff7a18; }
    .bg-bookings { background: #28a745; }
    .bg-customers { background: #0d6efd; }
    .bg-revenue { background: #6f42c1; }

    /* Mobile */
    @media(max-width:768px){
      .sidebar {
        left: -280px;
      }
      .sidebar.active {
        left: 0;
      }
      .content {
        margin-left: 0;
        border-radius: 0;
      }
      #toggleBtn {
        display: block;
      }
    }

    #toggleBtn {
      display: none;
      position: fixed;
      top: 15px;
      left: 15px;
      z-index: 999;
    }
  </style>
</head>
<body>

<button id="toggleBtn" class="btn btn-primary">
  <i class="bi bi-list"></i>
</button>

<!-- SIDEBAR -->
<div class="sidebar" id="sidebar">
  <div class="sidebar-header">
    üåç Travel Admin
  </div>
  
 
  <a href="/admin/home" class=""><i class="bi bi-speedometer2"></i> Dashboard</a>
  <a href="/admin/packages"><i class="bi bi-briefcase"></i> Packages</a>
  <a href="/admin/booking"><i class="bi bi-calendar-check"></i> Bookings</a>
  <a href="/admin/categories"><i class="bi bi-tags"></i> Categories</a>
  <a href="#"><i class="bi bi-people"></i> Customers</a>
  <a href="/admin/gallery"><i class="bi bi-images"></i> Gallery</a>
  <a href="/admin/blog"><i class="bi bi-pencil-square"></i> Blogs </a>
  <a href="/admin/contact"><i class="bi bi-envelope"></i> Contact</a>
  <a href="#"><i class="bi bi-gear"></i> Settings</a>
  <a href="#" style="color:#ff6b6b;"><i class="bi bi-box-arrow-right"></i> Logout</a>
</div>

<!-- CONTENT -->
<div class="content">
  <h2 class="fw-bold mb-4">Welcome Admin üëã</h2>

  

<script>
  const toggleBtn = document.getElementById("toggleBtn");
  const sidebar = document.getElementById("sidebar");

  toggleBtn.addEventListener("click", () => {
    sidebar.classList.toggle("active");
  });
</script>

</body>
</html>
