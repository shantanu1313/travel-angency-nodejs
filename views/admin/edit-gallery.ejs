<h1>Edit Gallery Image</h1><%- include('navbar.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin | Edit Gallery Image</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container mt-5 mb-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Edit Gallery Image</h4>
        </div>

        <div class="card-body">
            <form action="/admin/gallery/update/<%= gallery.gallery_id %>"
                  method="POST"
                  enctype="multipart/form-data">

                <!-- Image Title -->
                <div class="mb-3">
                    <label class="form-label">Image Title</label>
                    <input type="text"
                           name="image_title"
                           class="form-control"
                           value="<%= gallery.image_title %>"
                           required>
                </div>

                <!-- Current Image -->
                <div class="mb-3">
                    <label class="form-label">Current Image</label><br>
                    <img src="/assets/images/<%= gallery.image_file %>"
                         style="width:150px;height:90px;object-fit:cover;border-radius:6px;">
                    <input type="hidden"
                           name="old_image"
                           value="<%= gallery.image_file %>">
                </div>

                <!-- New Image -->
                <div class="mb-3">
                    <label class="form-label">Change Image (optional)</label>
                    <input type="file"
                           name="image_file"
                           class="form-control"
                           accept="image/*">
                </div>

                <!-- Buttons -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        Update Image
                    </button>
                    <a href="/admin/gallery" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

</body>
</html>

<%- include('footer.ejs') %>
