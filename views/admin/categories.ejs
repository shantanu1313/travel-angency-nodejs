<!-- Add this in your head if not already included -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* Custom Card Styles */
    .card-header {
        font-size: 1.1rem;
        letter-spacing: 0.5px;
    }

    .btn-success {
        transition: all 0.3s ease;
    }

    .btn-success:hover {
        background-color: #28a745cc;
        transform: scale(1.02);
    }

    .table img {
        border-radius: 0.5rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .badge {
        font-weight: 500;
        padding: 0.5em 0.8em;
    }
</style>

<div class="container py-5">

    <!-- Page Title -->
    <h2 class="text-center fw-bold mb-5 text-primary">Travel Categories</h2>

    <!-- Add Category Form Card -->
    <div class="card shadow-sm border-0 rounded-4 mb-5">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0 fw-bold"><i class="bi bi-plus-circle me-2"></i>Add New Category</h5>
        </div>
        <div class="card-body">
<form action="/admin/categories/add" method="POST"  enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control form-control-lg" name="category_name" placeholder="Category Name" required>
                    </div>
                    <div class="col-md-4">
                        <input type="file" class="form-control form-control-lg" name="image" placeholder="Image filename (example.jpg)" required>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control form-control-lg" name="description" placeholder="Description">
                    </div>
                </div>
                <button type="submit" class="btn btn-success btn-lg mt-4 w-100 fw-bold">
                    <i class="bi bi-plus-circle me-2"></i>Add Category
                </button>
            </form>
        </div>
    </div>

    <!-- Categories Table Card -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-secondary text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold"><i class="bi bi-list-ul me-2"></i>All Categories</h5>
            <span class="badge bg-light text-dark fs-6"><%= categories.length %> Categories</span>
        </div>
        <div class="card-body">
            <% if (categories.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Category Name</th>
                                <th>Image</th>
                                <th>Description</th>
                                
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(category => { %>
                                <tr>
                                    <td><%= category.id %></td>
                                    <td class="fw-bold"><%= category.category_name %></td>
                                    <td>
                                        <img src="/assets/images/<%= category.image %>" alt="<%= category.category_name %>" style="height:50px; width:50px; object-fit:cover;">
                                    </td>
                                    <td><%= category.description %></td>
                                    <td>
                                        <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-sm btn-primary fw-bold me-2">
                                            <i class="bi bi-pencil-fill me-1"></i>Edit  
                                        </a>
                                       
                                        <a href="/admin/categories/delete/<%= category.id %>" class="btn btn-sm btn-danger fw-bold" onclick="return confirm('Are you sure you want to delete this category?');">
                                            <i class="bi bi-trash-fill me-1"></i>Delete 
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                      <a href="/admin" class="btn btn-secondary btn-lg mt-4 w-100 fw-bold">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center text-muted fst-italic">No categories added yet.</p>
            <% } %>
        </div>
    </div>

</div>