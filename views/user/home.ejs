
<%- include("navbar.ejs") %>

<!-- ================= HERO SECTION ================= -->
 <!-- Hero Banner -->
<section class="hero-banner" style="position: relative; padding-top: 80px; min-height: 600px;">
    <!-- Hero Banner Background Image -->
    <img src="./assets/images/heroimg.jpg" alt="Travel Hero" class="hero-bg-img"
        style="position:absolute;top:0;left:0;width:100%;height:600px;object-fit:cover;z-index:0;">
    <div class="hero-overlay"
        style="position:absolute;top:0;left:0;width:100%;height:600px;background:rgba(17,40,101,0.5);z-index:1;">
    </div>
    <div class="container hero-content" style="position: relative; z-index: 2; min-height: 500px;">
        <div class="row align-items-center" style="min-height: 540px;">
            <div class="col-lg-6 text-white" style="bottom:100px;">
                <h1 class="display-4 fw-bold mb-4 ">Discover Amazing Destinations</h1>
                <p class="lead mb-4">Plan your perfect getaway with our exclusive travel packages. Experience the world like never before.</p>
                <a href="/user/packages" class="btn btn-light btn-lg me-3">Explore Packages</a>
                <a href="/user/contact" class="btn btn-outline-light btn-lg">Contact Us</a>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="./assets/images/heroimg.jpg" alt="Travel Hero Side" style="width:100%;height:500px;object-fit:cover;border-radius:18px;box-shadow:0 2px 20px rgba(10,32,94,0.13);">
            </div>
        </div>
    </div>
</section>


<!-- Popular Packages -->
<section class="py-5 packages-section"
  style="background:linear-gradient(135deg,#f5f9ff,#eef3f8);">

  <div class="container">
    <div class="text-center mb-5">
