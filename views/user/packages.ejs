<%- include("navbar.ejs") %>

<!-- ===================== MODERNIZED PACKAGES SECTION ===================== -->
<section
  class="py-5 packages-section"
  style="background: linear-gradient(135deg, #e1e8ee 0%, #f7fafc 100%)"
>
  <div class="container">
    <div class="text-center mb-5">
      <span
        class="badge rounded-pill bg-primary mb-2 px-3 py-2 fs-6"
        style="letter-spacing: 1px"
        >TOP DESTINATIONS</span
      >
      <h2 class="fw-bold mb-2" style="font-size: 2.7rem">
        Browse Our Packages
      </h2>
      <p class="text-muted mb-0" style="font-size: 1.13rem">
        Curated experiences for every traveler. Find your next adventure below!
      </p>
    </div>
    <div class="row g-5 justify-content-center">
      <!-- Goa Beach Paradise -->
      <% for (var i = 0; i < packages.length; i++) { %>
      <div class="col-md-6 col-lg-4 d-flex">
        <div
          class="package-card-modern card shadow-lg border-0 w-100"
          style="border-radius: 22px"
        >
          <div class="position-relative">
            <img
              src="/assets/images/<%- packages[i].package_image %>"
              alt="Goa Beach Paradise"
              class="card-img-top"
              style="
                height: 260px;
                object-fit: cover;
                border-top-left-radius: 22px;
                border-top-right-radius: 22px;
              "
            />
            <span
              class="badge bg-gradient position-absolute top-0 start-0 m-3 px-3 py-2"
              style="
                background: linear-gradient(110deg, #fcb900, #db36a4);
                font-size: 1rem;
              "
              ></span
            >
            
            
          </div>
          <div
            class="card-body d-flex flex-column"
            style="border-radius: 0 0 22px 22px; background: #fff"
          >
            <h3 class="card-title h5 mb-2" style="font-weight: bold">
              <%- packages[i].package_title %>
            </h3>
            <p
              class="card-text mb-3 text-muted flex-grow-1"
              style="font-size: 1.06rem"
            >
              <%- packages[i].short_description %>
            </p>
            <ul class="list-unstyled mb-3">
              <li>
                <i class="bi bi-clock text-primary"></i> <%-
                packages[i].total_days %> Days • <%- packages[i].total_nights %>
                Nights
              </li>
              <li>
                <i class="bi bi-geo-alt text-danger"></i> North & South Goa
              </li>
            </ul>
            <div class="mb-4 d-flex align-items-center justify-content-between">
              <span>
                <span
                  class="text-muted text-decoration-line-through"
                  style="font-size: 1rem"
                  >₹<%- packages[i].dublicate_price %>
                </span>
                <span
                  class="fw-bold ms-2 text-success"
                  style="font-size: 1.23rem"
                >
                  ₹ <%= Number(packages[i].price).toLocaleString('en-IN') %>
                </span>
              </span>
              <span class="badge rounded-pill bg-light text-dark ms-2"
                >Limited Offer</span
              >
            </div>
            <a
              href="/user/booking"
              class="btn btn-gradient px-4 py-2 mt-auto"
              style="
                background: linear-gradient(90deg, #1e3c72, #2a5298);
                color: #fff;
                font-weight: 600;
                border-radius: 1.5em;
              "
              >Book Now</a
            >
          </div>
        </div>
      </div>
      <% } %>

   
    
    </div>
  </div>
</section>

<!-- Add custom styles for modern cards (should be moved to CSS in production) -->
<style>
  .btn-gradient {
    background: linear-gradient(90deg, #1e3c72 0%, #2a5298 100%);
    color: #fff;
    border: none;
    transition: background 0.3s, box-shadow 0.3s;
    box-shadow: 0 2px 8px rgba(30, 44, 114, 0.07);
  }
  .btn-gradient:hover {
    background: linear-gradient(90deg, #2a5298 0%, #1e3c72 100%);
    color: #ffe564;
    box-shadow: 0 6px 22px rgba(30, 44, 114, 0.13);
  }
  .package-card-modern:hover {
    transform: translateY(-6px) scale(1.025);
    box-shadow: 0 16px 32px rgba(42, 82, 152, 0.1) !important;
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>

<%- include("footer.ejs") %>
