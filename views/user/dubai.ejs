<%- include('navbar.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dubai Luxury Tour | Package Details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body style="background:#f5f7fa;">

<!-- ================= HEADER ================= -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand fw-bold" href="/">Travel Agency</a>
        <a href="/user/packages" class="btn btn-outline-light">Back to Packages</a>
    </div>
</nav>

<!-- ================= PACKAGE DETAILS ================= -->
<section class="py-5">
    <div class="container">
        <div class="row g-5 align-items-center">

            <!-- IMAGE -->
            <div class="col-lg-6">
                <img src="/assets/images/dubai1.jpg"
                     class="img-fluid rounded shadow"
                     alt="Dubai Luxury Tour">
            </div>

            <!-- CONTENT -->
            <div class="col-lg-6">
                <span class="badge bg-warning text-dark mb-2 px-3 py-2">
                    International Package
                </span>

                <h1 class="fw-bold mb-3">Dubai Luxury Tour</h1>

                <p class="text-muted fs-5">
                    Experience world-class luxury, desert safari,
                    Burj Khalifa, dhow cruise and premium shopping in Dubai.
                </p>

                <!-- DETAILS LIST -->
                <ul class="list-unstyled fs-5 mt-4">
                    <li class="mb-2">
                        <i class="bi bi-clock text-primary"></i>
                        <strong> Duration:</strong> 5 Days • 4 Nights
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-geo-alt text-danger"></i>
                        <strong> Location:</strong> Dubai, UAE
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-star-fill text-warning"></i>
                        <strong> Rating:</strong> 4.9 / 5
                    </li>
                </ul>

                <!-- PRICE -->
                <div class="mt-4 mb-4">
                    <span class="text-muted text-decoration-line-through fs-5">
                        ₹85,000
                    </span>
                    <span class="fs-2 fw-bold text-success ms-3">
                        ₹72,999
                    </span>
                </div>

                <!-- BUTTONS -->
                <div class="d-flex gap-3">
                    <a href="/booking/dubai" class="btn btn-warning btn-lg px-4">
                        Book Now
                    </a>
                    <a href="/contact" class="btn btn-outline-secondary btn-lg px-4">
                        Enquiry
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ================= ITINERARY ================= -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">Tour Itinerary</h2>

        <div class="accordion" id="itinerary">

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button"
                            data-bs-toggle="collapse"
                            data-bs-target="#day1">
                        Day 1 – Arrival & Marina Cruise
                    </button>
                </h2>
                <div id="day1" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        Arrival in Dubai, hotel check-in and evening Marina Dhow Cruise with dinner.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            data-bs-toggle="collapse"
                            data-bs-target="#day2">
                        Day 2 – City Tour & Burj Khalifa
                    </button>
                </h2>
                <div id="day2" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Dubai city tour, Burj Khalifa 124th floor,
                        Dubai Mall & Fountain show.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            data-bs-toggle="collapse"
                            data-bs-target="#day3">
                        Day 3 – Desert Safari
                    </button>
                </h2>
                <div id="day3" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Thrilling desert safari with dune bashing,
                        camel ride, BBQ dinner & live entertainment.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            data-bs-toggle="collapse"
                            data-bs-target="#day4">
                        Day 4 – Shopping & Leisure
                    </button>
                </h2>
                <div id="day4" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Gold Souk, Spice Market and leisure time for shopping.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed"
                            data-bs-toggle="collapse"
                            data-bs-target="#day5">
                        Day 5 – Departure
                    </button>
                </h2>
                <div id="day5" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Breakfast and departure from Dubai with luxury memories.
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ================= FOOTER ================= -->
<footer class="bg-dark text-light text-center py-3">
    © 2026 Travel Agency | All Rights Reserved
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

