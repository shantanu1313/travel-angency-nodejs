<%- include('navbar.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Kerala Backwaters | Package Details</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body style="background:#f5f7fa;">

<!-- ================= HEADER ================= -->
<nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
        <a class="navbar-brand fw-bold" href="/">Travel Agency</a>
        <a href="/packages" class="btn btn-outline-light">Back to Packages</a>
    </div>
</nav>

<!-- ================= PACKAGE DETAILS ================= -->
<section class="py-5">
    <div class="container">
        <div class="row g-5 align-items-center">

            <!-- IMAGE -->
            <div class="col-lg-6">
                <img src="/assets/images/kerala1.jpg"
                     class="img-fluid rounded shadow"
                     alt="Kerala Backwaters">
            </div>

            <!-- CONTENT -->
            <div class="col-lg-6">
                <span class="badge bg-success mb-2 px-3 py-2">Domestic Package</span>

                <h1 class="fw-bold mb-3">Kerala Backwaters</h1>

                <p class="text-muted fs-5">
                    Enjoy serene backwaters, houseboat cruise,
                    lush greenery, and peaceful nature in God’s Own Country – Kerala.
                </p>

                <!-- DETAILS LIST -->
                <ul class="list-unstyled fs-5 mt-4">
                    <li class="mb-2">
                        <i class="bi bi-clock text-primary"></i>
                        <strong> Duration:</strong> 5 Days • 4 Nights
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-geo-alt text-danger"></i>
                        <strong> Location:</strong> Alleppey, Munnar, Kochi
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-star-fill text-warning"></i>
                        <strong> Rating:</strong> 4.8 / 5
                    </li>
                </ul>

                <!-- PRICE -->
                <div class="mt-4 mb-4">
                    <span class="text-muted text-decoration-line-through fs-5">₹22,000</span>
                    <span class="fs-2 fw-bold text-success ms-3">₹18,999</span>
                </div>

                <!-- BUTTONS -->
                <div class="d-flex gap-3">
                    <a href="/booking/kerala" class="btn btn-success btn-lg px-4">
                        Book Now
                    </a>
                    <a href="/contact" class="btn btn-outline-secondary btn-lg px-4">
                        Enquiry
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ================= ITINERARY ================= -->
<section class="py-5 bg-white">
    <div class="container">
        <h2 class="fw-bold mb-4 text-center">Tour Itinerary</h2>

        <div class="accordion" id="itinerary">

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" data-bs-toggle="collapse" data-bs-target="#day1">
                        Day 1 – Arrival at Kochi
                    </button>
                </h2>
                <div id="day1" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        Arrival at Kochi, hotel check-in and local sightseeing.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#day2">
                        Day 2 – Munnar Hill Station
                    </button>
                </h2>
                <div id="day2" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Visit tea gardens, waterfalls and scenic viewpoints.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#day3">
                        Day 3 – Alleppey Houseboat
                    </button>
                </h2>
                <div id="day3" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Full day houseboat cruise through beautiful backwaters.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#day4">
                        Day 4 – Leisure & Cultural Show
                    </button>
                </h2>
                <div id="day4" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Free time and traditional Kerala cultural performance.
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" data-bs-toggle="collapse" data-bs-target="#day5">
                        Day 5 – Departure
                    </button>
                </h2>
                <div id="day5" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        Breakfast and departure with unforgettable memories.
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ================= FOOTER ================= -->
<footer class="bg-dark text-light text-center py-3">
    © 2026 Travel Agency | All Rights Reserved
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

<%- include('footer.ejs') %>
