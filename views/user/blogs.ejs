<%- include("navbar.ejs") %>

<div class="container py-5 mt-5">

<div class="text-center mb-5">
    <h1 class="fw-bold">Travel Blogs & Guides</h1>
    <p class="text-muted">Get inspired with our travel stories and tips</p>
</div>

<div class="row g-4">

<% if (blogs && blogs.length > 0) { %>
<% blogs.forEach(blog => { %>

<div class="col-md-6 col-lg-4">
<div class="card h-100 shadow-sm">

<img src="/assets/images/<%= blog.blog_image %>"
     class="card-img-top"
     style="height:220px;object-fit:cover;"
     alt="<%= blog.blog_title %>">

<div class="card-body">

<small class="text-muted">
    <%= new Date(blog.blog_publish_date).toDateString() %>
</small>

<h5 class="card-title mt-2">
    <%= blog.blog_title %>
</h5>

<p class="card-text text-muted">
    <%= blog.blog_short_description %>
</p>

<a href="/user/packages" class="btn btn-outline-primary">
    Read More
</a>



</div>
</div>
</div>

<% }) %>
<% } else { %>
<p class="text-center text-muted">No blogs available</p>
<% } %>

</div>
</div>

<%- include("footer.ejs") %>
